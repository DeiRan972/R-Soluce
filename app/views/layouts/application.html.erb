    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
    <% if user_signed_in? %>
      <body class="body_size ">
    <% else %>
      <body>
    <% end %>
    <% if user_signed_in? %>
        <%= render 'shared/navbar' %>
    <% end %>
      <%= render 'shared/sidebar' %>
      <%= yield %>
      <%= render 'shared/flashes' %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
  </body>
</html>
