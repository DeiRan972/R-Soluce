
<!------ Include the above in your HEAD tag ---------->
<link href="https://fonts.googleapis.com/css?family=DM+Sans:400,500,700&display=swap" rel="stylesheet">
<div class="main">
  <div class="container col-12 mx-auto">
    <div class="task-manager">
      <div class="task-manager">
        <div class="page-content">
          <div class="header"><strong> STATUS DES TÃ‚CHES</div>
            <div class="container col-12 mx-auto">
            <div class="tasks-manager">
              <% @current_user_tasks.each do |task_user| %>
                <div class="task">
                  <input class="task-item" name="task" type="checkbox" id="item-1" checked>
                    <label for="item-1">
                    <span class="label-text"> <%= task_user.project.name %> - <%= task_user.description.capitalize %></span>
                  </label>
                  <span class="tag approved"><%= task_user.status  %></span>
                </div>
              <% end %>
            </div>
        </div>
      </div>
     <div class="container">
        <p>CALENDRIER DES PROJETS</p><%= week_calendar(number_of_weeks: 1, events: @projects, attribute: :start_date, end_attribute: :end_date) do |date, projects| %>
            <%= date %>
          <% projects.each do |project| %>
            <div>
              <%= project.name %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
