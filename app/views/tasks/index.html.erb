<div class="container col-12 mx-auto col-sm-12">
    <% @tasks.each do |task| %>
      <%= link_to  [task.project, task] do %>
           <div class="card-user-task m-4 ">
          <div class="face text-center">
            <h3><%= task.project.name.upcase %></h3>
          </div>
          <div class="infos m-4 text-center">
            <h1><%= task.name.upcase %></h1>
            <p >Tâche : <strong><%= task.description %></strong></p>
            <p> État : <%= task.status %></p>
            <p> Temps estimé : <%= task.estimate_time %> - heures</p>
          </div>
        </div>
      <% end %>
    <% end %>
     <div class="text-center">
        <h1>  - <%= @tasks.count %> - </h1>
      </div>
</div>
