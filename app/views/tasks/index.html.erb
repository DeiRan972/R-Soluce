<div class="main">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-10">
       <div class="text-center">
            <h1>  Vous avez : <%= @tasks.count %> Tâches </h1>
          </div>
        <% @tasks.each do |task| %>
          <%= link_to  [task.project, task] do %>
            <div class="card-user-task m-4" data-controller="add-comment">
              <div class="face text-center">
                <h3><%= task.project.name.upcase %></h3>
              </div>
                <div class="infos m-4 text-center">
                  <h1><%= task.name.upcase %></h1>
                  <p >Tâche : <strong><%= task.description %></strong></p>
                  <p> Etat : <%= task.status %></p>
                  <p> Temps estimé : <%= task.estimate_time %> - Jours</p>
                  <% end %>
                </div>
            </div>
          <% end %>

          <%= link_to project_tasks_path(format: :pdf) do%>
            <div class="btn btn-show justify-center">
              <span> PDF Tasks </span>
            </div>
          <% end %>

          <div class="text-center">
            <h1>  - <%= @tasks.count %> - </h1>
          </div>
      </div>
    </div>
  </div>
</div>
