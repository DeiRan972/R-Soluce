<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
       <div class = image>
          <img src =<%= @project.user.avatar %> width=200px height=200px border-radius=50% %>
        </div>
     <div class = card>
       <div class = content>
        <div class = card>
         <h3><%= @project.name %></h3>
         <p><%= @project.description %></p>
         <p><%= @project.start_date %></p>
         <p><%= @project.end_date %></p>
         <p><%= @project.number_of_day %></p>
        </div>

        <div class = card>
          <ol>
           <% @project.tasks.each_with_index do |task, index|%>
             <li><%= task.name %> - <%= task.description %> - <%= task.status %>
              - <%= task.estimate_time %> - <%= task.real_time %> -
             <%= task.tjm %> - <%= task.user.first_name %></li>
           <%end%>
          </ol>
        </div>

        <div class = card>
         <ul><% @project.users.uniq.each do |user| %>
          <%= user.first_name %>
         <%end%></ul>
        </div>

        <div>
          <%= link_to "Update #{@project.name}",
             edit_project_path(@project),
             data: { confirm: "Are you sure?" } %>
        </div>

        <div>
         <%= link_to "New task for #{@project.name}",
             new_project_task_path(@project),
             data: { confirm: "Are you sure?" } %>
        </div>

        <%= simple_form_for [@project, @task] do |f|%>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.association :user %>
          <%= f.submit %>
        <% end %>

        <%= render "shared/form-task", task: [@project, @task]%>


      </div>

    </div>
  </div>
</div>
