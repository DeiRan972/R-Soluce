
<div class="main mr-5">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-10">
        <% @projects.each do |project|%>
          <div class = "card text-center m-3 p-2 project-card">
            <p class = "h5"><%= link_to project.name.upcase, project_path(project) %></p>
            <div class="card-project-infos col-8 mx-auto ">
              <div>
                <p class = "h6 text-muted"><%= project.description.capitalize %></p>
              </div>
              <div>
                <p><strong>Start date : </strong><%= project.start_date.strftime('%d-%m-%Y') %></p>
                <p><strong>End date : </strong><%= project.end_date.strftime('%d-%m-%Y') %></p>
                <%# <p><strong>DurÃ©e en jours : </strong><%= (end_date.strftime - start_date.strftime) %></p>
                <% if current_user.admin %>
                  <div class="btn-show-project btn btn-primary btn-sm">
                    <%= link_to "PDF", project_path(project, format: :pdf) %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <%end%>

        <div class="pdf-btn-container col-12 mx-auto">
          <div class="col-3 p-2">
            <% if current_user.admin %>
              <%= link_to  new_project_path do%>
                <div class="btn btn-show col-12 mx-auto mt-2 mb-2">
                  <span> Nouveau projet </span>
                </div>
              <% end %>
            <% end %>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
