<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
        <% @projects.each do |project|%>
          <div class = card>
            <h2><%= link_to project.name, project_path(project) %></h2>
            <p><%= project.description %></p>
            <p><%= project.start_date %> - <%= project.end_date %></p>
          </div>

        <%end%>

    </div>
  </div>
</div>
