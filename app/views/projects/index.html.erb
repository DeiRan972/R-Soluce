<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
        <% @projects.each do |project|%>
          <div class = card>
            <div>
             <h2><%= project.name %></h2>
             <p><%= project.description %></p>

             <ol>
                <% project.tasks.each do |task|%>
                <li><%= task.name %> - <%= task.description %> - <%= task.status %>
                - <%= task.estimate_time %> -  <%= task.real_time %> -
                <%= task.tjm %> - <%= task.user.first_name %></li>
              <%end%>
             </ol>

              <p><%= project.start_date %> - <%= project.end_date %></p>
            </div>
          </div>

        <%end%>

    </div>
  </div>
</div>
