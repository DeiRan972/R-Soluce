
<section class="vh-100 gradient-custom section-size">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <div class="mb-md-5 mt-md-4">

             <h2 class="fw-bold mb-2 text-uppercase">Connexion</h2>
              <p class="text-white-50 mb-5">Veuillez saisir votre identifiant et votre mot de passe!</p>

              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                <div class="form-outline form-white mb-4">
                  <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: 'email', class: "form-control form-control-lg" }%>
                </div>

                <div class="form-outline form-white mb-4">
                  <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: 'current-password', class:"form-control form-control-lg" } %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="field mb-4", >
                    <%= f.input :remember_me, as: :boolean %>
                  </div>
                <% end %>

                  <div class="actions">
                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Connexion</button>
                  </div>
              <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
