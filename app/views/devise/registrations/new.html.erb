<h2>Inscription</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.input :first_name %><br />
  </div>

   <div class="field">
    <%= f.input :last_name %><br />
  </div>

  <div class="field">
    <%= f.input :email %><br />
  </div>

  <div class="field">
    <%= f.input :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caract√®re au moins)</em>
    <% end %><br />
  </div>

  <div class="field">
    <%= f.input :password_confirmation, label: false %><br />
  </div>

 <div class="field">
    <%= f.association :role, label_method: :level, value_method: :id, include_blank: false  %> <br />
  </div>



  <div class="actions">
    <%= f.submit "S'inscrire" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
